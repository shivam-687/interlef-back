{
    "kind": "collectionType",
    "collectionName": "articles",
    "info": {
        "singularName": "article",
        "pluralName": "articles",
        "displayName": "article",
        "description": ""
    },
    "options": {
        "draftAndPublish": true,
        "populateCreatorFields": true
    },
    "pluginOptions": {},
    "attributes": {
        "title": {
            "type": "string",
            "required": true
        },
        "summery": {
            "type": "string"
        },
        "admin_user": {
            "type": "relation",
            "relation": "oneToOne",
            "target": "admin::user"
        },
        "cover": {
            "type": "media",
            "multiple": false,
            "required": false,
            "allowedTypes": [
                "images",
                "files",
                "videos",
                "audios"
            ]
        },
        "category": {
            "type": "relation",
            "relation": "manyToOne",
            "target": "api::category.category",
            "inversedBy": "articles"
        },
        "Slug": {
            "type": "uid",
            "targetField": "title",
            "required": true
        },
        "content": {
            "type": "richtext",
            "required": true
        }
    }
}
